<h1>Cocktails#index</h1>
<p>Find me in app/views/cocktails/index.html.erb</p>

<link href="https://fonts.googleapis.com/css?family=Josefin+Sans" rel="stylesheet">

<div class="container">

<div class="header" >
  <div class="header-content">
    <h1>Fancy Cocktails</h1>
  </div>
</div>

<div class="cards-container">
     <div class="row">

        <% @cocktails.each do |cocktail| %>

            <div class="col-xs-12 col-sm-4">
                <div class="card">
                    <h2> <%= link_to cocktail.name, cocktail_path(cocktail) %> </h2>
                </div>
            </div>
    <% end %>

     </div>
</div>

<div class = "link">
  <%= link_to "+ Add a New Cocktail", new_cocktail_path, class: 'btn btn-warning' %>
</div>
  
</div>
 
